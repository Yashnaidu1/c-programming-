#include <stdio.h>
int main() {
    int n = 5;
    int i, j;
    for (i = 1; i <= n; i++) {
        for (j = n-i; j > 0; j--) {
            printf(" ");
        }
        printf("%d", i);
        for (j = 1; j < 2*i-1; j++) {
            printf(" ");
        }
        if (i != n) {
            printf("%d", i);
        }
        printf("\n");
        }
    for (i = n-1; i >= 1; i--) {
        for (j = n-i; j > 0; j--) {
            printf(" ");
        }
        printf("%d", i);
        for (j = 1; j < 2*i-1; j++) {
            printf(" ");
        }
        if (i != n) {
            printf("%d", i);
        }
        printf("\n");
    }
    return 0;
}
